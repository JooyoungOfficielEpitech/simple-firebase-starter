{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "exclude": [
    "functions/**/*",
    "scripts/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "test/**/*",
    "metro.config.js",
    "babel.config.js",
    "app.config.js"
  ]
}
